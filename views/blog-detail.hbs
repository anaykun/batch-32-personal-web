<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog Detail</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/public/style.css" />
  </head>
  <body>
    <!-- start navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-5">
      <div class="container-fluid">
        <a class="navbar-brand" href="#"><img
            src="/public/assets/logo.png"
            alt=""
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarTogglerDemo02"
          aria-controls="navbarTogglerDemo02"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 fs-5 mx-5">
            <li class="nav-item">
              <a
                class="nav-link me-4 text-danger"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            <li class="nav-item">
              {{#if isLogin}}
                <a class="nav-link text-danger" href="/project-add">Project</a>
              {{/if}}
            </li>
          </ul>
          <form class="d-flex m-0">
            {{#if isLogin}}
              <span
                class="contact-span align-self-center me-3"
              >{{blog.author.username}}</span>
              <a
                class="nav-link btn text-danger mx-3"
                type="submit"
                href="/logout"
              >
                Logout
              </a>
            {{else}}
              <a
                class="nav-link btn text-danger"
                type="submit"
                href="/register"
              >
                Register
              </a>
              <a class="nav-link btn text-danger me-5" href="/login">
                Login
              </a>
            {{/if}}
            <a class="nav-contact btn text-light" href="/contact-me">
              Contact me
            </a>
          </form>
        </div>
      </div>
    </nav>
    <!-- end navbar -->

    <section class="blog-section">
      <div class="p-5">
        <h1>
          {{blog.projectname}}
        </h1>
        <div class="blog-section-flex">
          <div class="blog-section-left">
            <img src={{blog.projectuploadimage}} alt="" />
          </div>
          <div class="blog-section-right">
            <div class="blog-section-duration">
              <h3>Duration</h3>
              <div class="blog-duration">
                <p>
                  <img
                    src="/public/assets/calendar-svgrepo-com.svg"
                    alt=""
                    style="width: 15%; height: 100%;"
                  />
                  {{blog.timeDetail}}
                  -
                  {{blog.timeDetail2}}
                </p>
              </div>

              <div class="blog-duration">
                <p>
                  <img
                    src="/public/assets/time-svgrepo-com.svg"
                    alt=""
                    style="width: 15%; height: 100%;"
                  />
                  {{blog.timeCont}}
                  ||
                  <span
                    class="contact-span align-self-center me-3 fw-bold"
                  >{{blog.author.username}}</span>
                </p>
              </div>
            </div>
            <div class="blog-section-tekno">
              <h3>Technologies</h3>
              <div>
                {{#if blog.projectnodejs}}
                  <p><img
                      src="/public/assets/node-js-svgrepo-com.svg"
                      alt=""
                      style="width: 30%;"
                    />
                    Node Js</p>
                {{/if}}
                {{#if blog.projectreactjs}}
                  <p><img
                      src="/public/assets/react-svgrepo-com.svg"
                      alt=""
                      style="width: 30%;"
                    />
                    React Js</p>
                {{/if}}
                {{#if blog.projectnextjs}}
                  <p><img
                      src="/public/assets/next-js-svgrepo-com.svg"
                      alt=""
                      style="width: 30%;"
                    />
                    Next Js</p>
                {{/if}}
                {{#if blog.projecttypescript}}
                  <p><img
                      src="/public/assets/javascript-svgrepo-com.svg"
                      alt=""
                      style="width: 30%;"
                    />
                    Javascript</p>
                {{/if}}
              </div>
            </div>
          </div>

        </div>

        <p>
          {{blog.projectdescription}}
        </p>

      </div>

    </section>

  </body>
</html>