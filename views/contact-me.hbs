<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/style.css" />
    <title>Contact me</title>
  </head>
  <body>
    <!-- start navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-5">
      <div class="container-fluid">
        <a class="navbar-brand" href="#"><img
            src="/public/assets/logo.png"
            alt=""
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarTogglerDemo02"
          aria-controls="navbarTogglerDemo02"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 fs-5 mx-5">
            <li class="nav-item">
              <a
                class="nav-link me-4 text-danger"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            <li class="nav-item">
              {{#if isLogin}}
                <a class="nav-link text-danger" href="/project-add">Project</a>
              {{/if}}
            </li>
          </ul>
          <form class="d-flex m-0">
            {{#if isLogin}}
              <span
                class="contact-span align-self-center me-3 fw-bold"
              >{{user.username}}</span>
              <a
                class="nav-link btn text-danger mx-3"
                type="submit"
                href="/logout"
              >
                Logout
              </a>
            {{else}}
              <a
                class="nav-link btn text-danger"
                type="submit"
                href="/register"
              >
                Register
              </a>
              <a class="nav-link btn text-danger me-5" href="/login">
                Login
              </a>
            {{/if}}
            <a class="nav-contact btn text-light" href="/contact-me">
              Contact me
            </a>
          </form>
        </div>
      </div>
    </nav>
    <!-- end navbar -->

    <!-- CONTAINER FORM CONTACTME -->
    <form class="form-contact-me">
      <div class="contact-input-form">
        <div class="contact-form-header">
          <h1><span class="contact-span">{{user.username}}</span> Message</h1>
        </div>

        <div class="contact-input-name">
          <label for="contact-input-name">Name</label>
          <input type="text" id="contact-input-name" />
        </div>

        <div class="contact-input-email">
          <label for="contact-input-email">Email</label>
          <input type="email" id="contact-input-email" />
        </div>

        <div class="contact-input-phone">
          <label for="contact-input-phone">Phone Number</label>
          <input type="text" id="contact-input-phone" />
        </div>

        <div class="contact-input-subject">
          <label for="contact-input-subject">Subject</label>
          <select name="" id="contact-input-subject">
            <option value="" hidden></option>
            <option value="I'm Hiring">I'm Hiring</option>
            <option value="Let's Collaboration">Let's Collaboration</option>
            <option value="Let's Talk">Let's Talk</option>
          </select>
        </div>

        <div class="contact-input-message">
          <label for="contact-input-message">Your Message</label>
          <textarea
            name=""
            id="contact-input-message"
            cols="30"
            rows="5"
          ></textarea>
        </div>

        <div class="contact-input-submit">
          <button type="submit" onclick="submitForm()">Submit</button>
        </div>
      </div>
    </form>
    <!-- END CONTAINER FORM CONTACTME -->

    <!-- script boostrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <!-- end script boostrap -->
  </body>
</html>