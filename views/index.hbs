<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/style.css" />
    <title>Home</title>
  </head>
  <body>
    <!-- start navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-5 sticky-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="#"><img
            src="/public/assets/logo.png"
            alt=""
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarTogglerDemo02"
          aria-controls="navbarTogglerDemo02"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 fs-5 mx-5">
            <li class="nav-item">
              <a
                class="nav-link nav-active me-4 text-danger fw-bold"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            <li class="nav-item">
              {{#if isLogin}}
                <a class="nav-link text-danger" href="/project-add">Project</a>
              {{/if}}
            </li>
          </ul>
          <form class="d-flex m-0">
            {{#if isLogin}}
              <span
                class="contact-span align-self-center me-3 fw-bold"
              >{{user.username}}</span>
              <a
                class="nav-link btn text-danger mx-3"
                type="submit"
                href="/logout"
              >
                Logout
              </a>
            {{else}}
              <a
                class="nav-link btn text-danger"
                type="submit"
                href="/register"
              >
                Register
              </a>
              <a class="nav-link btn text-danger me-5" href="/login">
                Login
              </a>
            {{/if}}
            <a class="nav-contact btn text-light bg-danger" href="/contact-me">
              Contact me
            </a>
          </form>
        </div>
      </div>
    </nav>
    <!-- end navbar -->

    <!-- Container card home -->
    <section
      class="mb-5"
      style="padding: 5% 10%; background-color:rgb(221, 221, 221)"
    >
      <div class="d-flex shadow p-3 bg-body rounded gap-5 align-items-center">
        <div style="flex: 70%;" class="d-flex flex-column">
          <h1 class="display-6 mb-0 fw-bold">Hallo, I'm
            <span class="text-success">Anay</span></h1>
          <h3 class="text-success mb-5">Welcome to My Live</h3>
          <p class="fs-6 mb-5" style="text-align: justify;">Lorem Ipsum is
            simply dummy text of the printing and typesetting industry. Lorem
            Ipsum has been the industry's standard dummy text ever since the
            1500s, when an unknown printer took a galley of type and scrambled
            it to make a type specimen book. It has survived not only five
            centuries, but also the leap into electronic typesetting, remaining
            essentially unchanged.</p>

          <div class="d-flex align-items-center p-2 gap-5 mb-5">
            <a href="/contact-me" class="btn btn-dark">Contact</a>
            <div>
              <p class="fs-5 m-0">download<a href=""><img
                    src="/public/assets/icon-download.png"
                    alt=""
                    style="width: 3%;"
                    class="mb-2"
                  /></a></p>
            </div>
          </div>
          <div>
            <a href=""><img
                src="/public/assets/linkedin.png"
                alt=""
                style="width: 4%;"
              /></a>
            <a href=""><img
                src="/public/assets/instagram.png"
                alt=""
                style="width: 4%;"
              /></a>
            <a href=""><img
                src="/public/assets/facebook.png"
                alt=""
                style="width: 4%;"
              /></a>
            <a href=""><img
                src="/public/assets/twitter.png"
                alt=""
                style="width: 4%;"
              /></a>
          </div>
        </div>
        <div class="shadow bg-body rounded" style="flex:30%">
          <div>
            <img
              src="/public/assets/image-profil.jpeg"
              class="card-img-top"
              alt="..."
              style="width: 100%; height:400px;"
            />
          </div>

          <div class="card-body text-center">
            <h5 class="card-title">Ahmad Fauzi</h5>
            <p class="card-text">Fullstack Web Developer</p>
          </div>
        </div>
      </div>
    </section>
    <!-- End Container card home -->

    {{! CONTAINER CARD BLOG }}
    <section style="padding: 5% 10%; background-color: white">
      <h1 class="mb-5" style="text-align: center;">My Project</h1>
      <div class="mb-5">

        {{!-- {{#if isLogin}}
          <a
            href="/project-add"
            class=""
            style="background-color: black;
           color: white; padding:2%5%;
           margin-bottom:10em;
           text-decoration:none"
          >Add Post Project</a>
        {{/if}} --}}

      </div>

      <div class="grid" id="contents">
        {{#each projects}}
          <div class="card">
            <div class="image">
              <img src={{this.projectuploadimage}} alt="" />
            </div>
            <div class="tulisan">
              <div class="paragraf">
                <a href="/blog-detail/{{this.id}}">{{this.projectname}}</a>

                <h5>Durasi :
                  {{this.timeCont}}
                  ||
                  <span
                    class="contact-span fw-bold"
                  >{{this.author.username}}</span>
                </h5>
                <p>
                  {{this.projectdescription}}
                </p>
              </div>

              <div class="icon">
                {{#if this.projectnodejs}}
                  <a href=""><img
                      src="/public/assets/node-js-svgrepo-com.svg"
                      alt=""
                      style="height: 100%; width: 10%;"
                    /></a>
                {{/if}}
                {{#if this.projectreactjs}}
                  <a href=""><img
                      src="/public/assets/react-svgrepo-com.svg"
                      alt=""
                      style="height: 100%; width: 10%;"
                    /></a>
                {{/if}}
                {{#if this.projectnextjs}}
                  <a href=""><img
                      src="/public/assets/next-js-svgrepo-com.svg"
                      alt=""
                      style="height: 100%; width: 10%;"
                    /></a>
                {{/if}}
                {{#if this.projecttypescript}}
                  <a href=""><img
                      src="/public/assets/javascript-svgrepo-com.svg"
                      alt=""
                      style="height: 100%;  width: 10%;"
                    /></a>
                {{/if}}
              </div>
              {{#if this.isLogin}}
                <div class="tombol">
                  <a
                    href="/project-edit/{{this.id}}"
                    class="button-edit"
                  >Edit</a>
                  <a
                    href="/blog-delete/{{this.id}}"
                    class="button-delete"
                  >Delete</a>
                </div>
              {{/if}}
            </div>
          </div>
        {{/each}}
      </div>
    </section>
    {{! END CONTAINER CARD BLOG }}

    <!-- script boostrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <!-- end script boostrap -->
  </body>
</html>