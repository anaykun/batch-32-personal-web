<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/style.css" />
    <title>Project Edit</title>
  </head>
  <body>
    <!-- start navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light px-5">
      <div class="container-fluid">
        <a class="navbar-brand" href="#"><img
            src="/public/assets/logo.png"
            alt=""
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarTogglerDemo02"
          aria-controls="navbarTogglerDemo02"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 fs-5 mx-5">
            <li class="nav-item">
              <a
                class="nav-link me-4 text-danger"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link nav-active text-danger fw-bold"
                href="/project-add"
              >Project</a>
            </li>
          </ul>
          <form class="d-flex m-0">
            {{#if isLogin}}
              <span
                class="contact-span align-self-center me-3"
              >{{user.username}}</span>
              <a
                class="nav-link btn text-danger mx-3"
                type="submit"
                href="/logout"
              >
                Logout
              </a>
            {{else}}
              <a
                class="nav-link btn text-danger"
                type="submit"
                href="/register"
              >
                Register
              </a>
              <a class="nav-link btn text-danger me-5" href="/login">
                Login
              </a>
            {{/if}}
            <a class="nav-contact btn text-light bg-danger" href="/contact-me">
              Contact me
            </a>
          </form>
        </div>
      </div>
    </nav>
    <!-- end navbar -->

    <!-- CONTAINER FORM PROJECT -->
    <form
      action="/project-edit/{{data.id}}"
      method="POST"
      enctype="multipart/form-data"
      class="container"
    >
      <div class="form-project py-5">
        <div class="text-center mb-4">
          <h1 class="fs-2">Edit
            <span class="contact-span">{{user.username}}</span>
            Project</h1>
        </div>
        {{#if messages.error}}
          <div class="alert alert-danger" role="alert">
            {{messages.error}}
          </div>
        {{/if}}
        <div class="mb-2">
          <div class="fs-5">
            <label for="projectname" class="fw-bold">Name</label>
            <input
              type="text"
              name="projectname"
              id="projectname"
              style="width: 100%"
              value="{{data.projectname}}"
            />
          </div>
        </div>
        <div class="row mb-2">
          <div class="fs-5 col-6">
            <label for="startdate" class="fw-bold">Start Date</label>
            <input
              type="date"
              name="projectstartdate"
              id="startdate"
              class="p-2"
              style="width: 100%"
              value="{{data.projectstartdate}}"
            />
          </div>
          <div class="fs-5 col-6">
            <label for="enddate" class="fw-bold">End Date</label>
            <input
              type="date"
              name="projectenddate"
              id="enddate"
              class="p-2"
              style="width: 100%"
              value="{{data.projectenddate}}"
            />
          </div>
        </div>
        <div class="mb-2">
          <div class="fs-5">
            <label for="description" class="fw-bold">Description</label>
            <textarea
              name="projectdescription"
              id="description"
              class="fs-6 p-1"
              rows="5"
            >{{data.projectdescription}}</textarea>
          </div>
        </div>
        <div class="mb-2">
          <div class="">
            <label class="fs-5 fw-bold">Technologies</label>
          </div>
          <div class="fs-6 row px-3 align-items-center">
            <div class="col-5">
              <input
                value="true"
                {{data.projectnodejs}}
                type="checkbox"
                name="projectnodejs"
                id="projectnodejs"
              />
              <label for="projectnodejs" class="fw-light">Node js</label>
            </div>
            <div class="col-5">
              <input
                value="true"
                {{data.projectreactjs}}
                type="checkbox"
                name="projectreactjs"
                id="reactjs"
              />
              <label for="reactjs" class="fw-light">React js</label>
            </div>
            <div class="col-5">
              <input
                value="true"
                {{data.projectnextjs}}
                type="checkbox"
                name="projectnextjs"
                id="nextjs"
              />
              <label for="nextjs" class="fw-light">Next js</label>
            </div>
            <div class="col-5">
              <input
                value="true"
                {{data.projecttypescript}}
                id="javascript"
                name="projecttypescript"
                type="checkbox"
              />
              <label for="javascript" class="fw-light">Javascript</label>
            </div>
          </div>
        </div>
        <div class="mb-3">

          <label for="formFile" class="form-label fw-bold fs-5 m-0">Upload Image</label>
          <div>
            <img src={{data.projectuploadimage}} style="width: 20%;" alt="" />
          </div>
          <input
            class="form-control"
            type="file"
            id="formFile"
            name="projectuploadimage"
            value="{{data.projectuploadimage}}"
          />
        </div>
        <div class="text-end">
          <button type="submit" class="btn btn-danger btn-sm">Submit</button>
        </div>
      </div>
    </form>
    <!-- END CONTAINER FORM PROJECT -->

    <!-- script boostrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <!-- end script boostrap -->
  </body>
</html>